<div class="h-full pb-20 flex flex-col justify-center items-center">
    <div class="flex flex-col gap-2 items-center bg-[#D9D9D9] px-6 py-4 shadow border border-1 border-[#D9D9D9] rounded">
    <big>
        <h1 class="text-xl">Inicio de Sesion</h1>
    </big>
    <%# <%= link_to "Volver", "/"%>
    <%= form_with(url: sessions_path, html:{class:"flex flex-col gap-4"}) do |form|%>
        <div class="flex flex-col gap-1">
            <%= form.label :email %>
            <%= form.email_field :email, class:"border border-1 border-gray-300 rounded", placeholder:"Correo" %>
        </div>
        <div class="flex flex-col gap-1">
            <%= form.label :password %>
            <%= form.password_field :password, class:"border border-1 border-gray-300 rounded", placeholder:"Contrasena" %>
        </div>
        <small class="w-full flex flex-col gap-1 items-start justify-start">
        <%= link_to "No tienes cuenta? Registrate",new_user_path%> 
        <%= link_to "Olvidaste tu contrasena",password_reset_path%>
    </small> 
        <%= form.submit "Ingresar", class:"text-sm self-end border border-1 border-black rounded py-2 px-4"%>
    <%end%>
    </div>
</div>
