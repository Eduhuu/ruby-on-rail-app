<div class="h-full pb-20 flex flex-col justify-center items-center">
    <div class="flex flex-col gap-8 items-center bg-[#D9D9D9] px-6 py-4 shadow border border-1 border-[#D9D9D9] rounded">        
        <big class="flex justify-start w-full gap-3">
            <%= link_to "Volver", "/"%>
            <h1 class="text-xl">Crear publicacion</h1>
        </big>
        <%= form_with model: @publication, html:{class:"flex flex-col gap-4"} do |form| %>
            <% @publication.errors.full_messages.each do |error|%>
                <p><%= error%></p>
            <%end%>
            <div class="flex flex-col gap-2 items-center">
                <%= form.file_field :image, label:"Foto de perfil" , class:"hidden"%>
                <img id="avatar-register-img" class="w-[30vw] h-[15em] rounded cursor-pointer border-white border-1 border bg-white"/>
            </div>
            <%= form.label :title %>
            <%= form.text_field :title, class:"border border-1 border-gray-300 rounded", placeholder:"Titulo" %>
            <%= form.label :content %>
            <%= form.text_area :content, class:"border border-1 border-gray-300 rounded", placeholder:"Contenido" %>
            <%= form.submit "Crear", class:"text-sm self-end border border-1 border-black rounded py-2 px-4"%>
        <%end%>
    </div>
     <script src="<%= asset_path('publication.js') %>"></script>
</div>